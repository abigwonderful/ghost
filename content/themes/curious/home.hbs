{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The main content area on the homepage }}
<main class="site-main" role="main">
	<div class="site-content inner-wide">

		<div class="cover hero">
			{{#if @blog.cover}}
			<div class="cover-bg" style="background-image: url({{@blog.cover}})"></div>
			{{/if}}
			<div class="cover-content">
				<div class="inner">
					<div class="hero-wrap">
						<img class="hero-title fade-in" src="{{@blog.logo}}" alt="{{@blog.title}}" />
						<p class="hero-text fade-in">{{@blog.description}}</p>
						
					</div>
				</div><!-- .inner -->
				<a href="#" class="scroll-down square light icon-chevron-down"><span class="screen-reader-text">Scroll Down</span></a>
			</div><!-- .cover-content -->
		</div><!-- .cover -->
		
		{{! The tag below includes the post loop - partials/loop.hbs }}
		<h2>Recent Projects</h2>
		{{> "loop"}}
		
	</div><!-- .site-content -->
</main><!-- .site-main -->
